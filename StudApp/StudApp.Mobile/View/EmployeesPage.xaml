<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:StudApp.Mobile.ViewModel"
             xmlns:wrappers="clr-namespace:StudApp.Mobile.Wrappers"
             x:Class="StudApp.Mobile.View.EmployeesPage"
             x:DataType="viewmodels:EmployeesViewModel"
             Title="Сотрудники">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Text="Добавить сотрудника"
                HorizontalOptions="End"
                Margin="10"
                Command="{Binding AddEmployeeCommand}"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Employees}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="wrappers:EmployeeWrapper">
                    <Grid Padding="10" BackgroundColor="LightGray" Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="{Binding FirstName}" FontAttributes="Bold"/>
                        <Label Grid.Column="1" Text="{Binding SecondName}"/>
                        <Label Grid.Column="2" Text="{Binding LastName}"/>
                        <Label Grid.Column="4" Text="{Binding Phone}"/>
                        <Label Grid.Column="5" Text="{Binding Dormitry}"/>
                        <Label Grid.Column="6" Text="{Binding Flor}"/>
                        <Label Grid.Column="6" Text="{Binding Room}" HorizontalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
