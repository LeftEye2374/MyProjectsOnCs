<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CrabCounterApp.Mobile.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CrabCounterApp.Core.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             BackgroundColor="#E8F4FD">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="40" VerticalOptions="Center">

            <Label Text=" Вход" 
                   FontSize="36" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1B4F72"/>

            <Entry Text="{Binding Login}" 
                   Placeholder="Логин"
                   TextColor="#2E86AB"/>

            <Entry Text="{Binding Password}" 
                   IsPassword="True"
                   Placeholder="Пароль"
                   TextColor="#2E86AB"/>

            <Button Text=" Войти" 
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsLoginEnabled}"
                    BackgroundColor="{Binding IsLoginEnabled, Converter={StaticResource InverseBoolConverter}}"
                    TextColor="White"
                    CornerRadius="15"
                    FontSize="18"
                    HeightRequest="55"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
