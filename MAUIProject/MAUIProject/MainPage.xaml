<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIProject.MainPage">

    <FlexLayout Direction="Column">
        <Label Text="Pass generation" FontSize="24" HorizontalOptions="Center"/>

        <Label Text="Pass Length"/>
        <Stepper  Minimum="4" Value="{Binding PasswordLegth, Mode=TwoWay}" Maximum="16" Increment="1"/>

        <Label Text="{Binding PasswordLegth}" FontSize="16" />

        <Button Text="Generated password" Command="{Binding GeneratePasswordCommand}"/>

        <Label Text="{Binding FinalResult}" FontSize="16" FontAttributes="Bold"/>
    </FlexLayout>

</ContentPage>
