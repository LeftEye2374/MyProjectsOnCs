<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WeatherApp.Mobile.ViewModels"
             x:Class="WeatherApp.Mobile.Views.MainPage"
             x:DataType="vm:MainPageViewModel"
             Title="Погода">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Поиск города -->
            <Border StrokeThickness="2" 
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="LightGray">
                <Grid ColumnDefinitions="*,Auto" Padding="10">
                    <Entry Grid.Column="0" 
                           Text="{Binding CityName}"
                           Placeholder="Введите город"
                           ReturnCommand="{Binding SearchWeatherCommand}"
                           FontSize="16"/>
                    <Button Grid.Column="1" 
                            Text="🔍"
                            Command="{Binding SearchWeatherCommand}"
                            Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <!-- Индикатор загрузки -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="Blue"
                              HeightRequest="50"/>

            <!-- Карточка погоды -->
            <Border IsVisible="{Binding IsWeatherVisible}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    BackgroundColor="#E3F2FD"
                    Padding="20">
                <VerticalStackLayout Spacing="10">

                    <!-- Город и страна -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="{Binding CurrentWeather.CityName}"
                               FontSize="28"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding CurrentWeather.Country}"
                               FontSize="20"
                               VerticalOptions="End"/>
                    </HorizontalStackLayout>

                    <!-- Иконка погоды -->
                    <Image Source="{Binding CurrentWeather.IconUrl}"
                           HeightRequest="100"
                           WidthRequest="100"
                           HorizontalOptions="Center"/>

                    <!-- Температура -->
                    <Label Text="{Binding CurrentWeather.Temperature}"
                           FontSize="48"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <!-- Ощущается как -->
                    <Label Text="{Binding CurrentWeather.FeelsLike}"
                           FontSize="16"
                           HorizontalOptions="Center"
                           Opacity="0.8"/>

                    <!-- Описание -->
                    <Label Text="{Binding CurrentWeather.Description}"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>

                    <!-- Дополнительная информация -->
                    <Grid ColumnDefinitions="*,*" 
                          RowDefinitions="Auto,Auto,Auto,Auto"
                          RowSpacing="10"
                          Margin="0,10,0,0">

                        <!-- Влажность -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="💧 Влажность"
                               FontSize="16"/>
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding CurrentWeather.Humidity}"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <!-- Ветер -->
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="💨 Ветер"
                               FontSize="16"/>
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding CurrentWeather.WindSpeed}"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <!-- Давление -->
                        <Label Grid.Row="2" Grid.Column="0"
                               Text="🌡️ Давление"
                               FontSize="16"/>
                        <Label Grid.Row="3" Grid.Column="0"
                               Text="{Binding CurrentWeather.Pressure}"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <!-- Мин/Макс температура -->
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="📊 Мин/Макс"
                               FontSize="16"/>
                        <HorizontalStackLayout Grid.Row="3" Grid.Column="1" Spacing="5">
                            <Label Text="{Binding CurrentWeather.TempMin}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label Text="/"
                                   FontSize="18"/>
                            <Label Text="{Binding CurrentWeather.TempMax}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Кнопка обновления -->
                    <Button Text="🔄 Обновить"
                            Command="{Binding RefreshWeatherCommand}"
                            Margin="0,20,0,0"
                            BackgroundColor="#2196F3"
                            TextColor="White"/>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
