<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="StudApplication.Mobile.View.AddEmployeePopup"
             VerticalOptions="Center"
             HorizontalOptions="Center">
    
<ScrollView MaximumHeightRequest="600" MaximumWidthRequest="400">
    <Frame BackgroundColor="White" Padding="20" CornerRadius="10" HasShadow="True">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="15">
            <Label Grid.Row="0" 
                       Text="Новый сотрудник" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>

            <Grid Grid.Row="1" RowSpacing="10" Padding="0,10,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="ФИО:" FontAttributes="Bold" FontSize="14"/>
                <Entry Grid.Row="1" Text="{Binding FirstName}" Placeholder="Имя" Margin="0,5"/>
                <Entry Grid.Row="2" Text="{Binding LastName}" Placeholder="Фамилия" Margin="0,5"/>
                <Entry Grid.Row="3" Text="{Binding SecondName}" Placeholder="Отчество" Margin="0,5"/>

                <Label Grid.Row="4" Text="Контакты:" FontAttributes="Bold" FontSize="14" Margin="0,10,0,0"/>
                <Entry Grid.Row="5" Text="{Binding Phone}" Placeholder="Телефон" Margin="0,5"/>
                <Entry Grid.Row="6" Text="{Binding Faculty}" Placeholder="Факультет" Margin="0,5"/>
                <Entry Grid.Row="7" Text="{Binding Room}" Placeholder="Комната (101)" Margin="0,5"/>
                <Entry Grid.Row="8" Text="{Binding DormitryText}" Placeholder="Общежитие" Keyboard="Numeric" Margin="0,5"/>
                <Entry Grid.Row="9" Text="{Binding FlorText}" Placeholder="Этаж" Keyboard="Numeric" Margin="0,5"/>
                <Entry Grid.Row="10" Text="{Binding CursText}" Placeholder="Курс" Keyboard="Numeric" Margin="0,5"/>

                <Entry Grid.Row="11" Text="{Binding Role}" Placeholder="Роль" Margin="0,5"/>
                <Entry Grid.Row="12" Text="{Binding NumOfShiftText}" Placeholder="Номер смены" Keyboard="Numeric" Margin="0,5"/>
                <Entry Grid.Row="13" Text="{Binding Password}" IsPassword="True" Placeholder="Пароль" Margin="0,5"/>
            </Grid>

            <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0" 
                            Text="Отмена" 
                            BackgroundColor="LightGray"
                            Clicked="OnCancel"/>
                <Button x:Name="SaveButton"
                            Grid.Column="1" 
                            Text="Добавить" 
                            BackgroundColor="#0078D4"
                            TextColor="White"
                            Clicked="OnSave"/>
            </Grid>
        </Grid>
    </Frame>
</ScrollView>
