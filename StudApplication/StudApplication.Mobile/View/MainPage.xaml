<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:StudApplication.Mobile.ViewModel" 
             x:DataType="viewmodels:MainPageViewModel"
             x:Class="StudApplication.Mobile.View.MainPage"
             Title="MainPage">


    <StackLayout VerticalOptions="Center" Padding="20">

        <Label Text="ВХОД" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry x:Name="LoginEntry" Placeholder="Введите логин" Text="{Binding EmployeeWrapper.Login, Mode=TwoWay}" HorizontalOptions="Center" WidthRequest="300"/>

        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" Text="{Binding EmployeeWrapper.Password, Mode=TwoWay}" HorizontalOptions="Center" WidthRequest="300"/>

        <Button x:Name="LoginButton" Text="Войти" FontSize="18" HorizontalOptions="Center" WidthRequest="300" Command="{Binding LoginCommand}"/>

    </StackLayout>

</ContentPage>