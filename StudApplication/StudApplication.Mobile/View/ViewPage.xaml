<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudApplication.Mobile.View.ViewPage"
             Title="ViewPage">
    
    <Grid RowDefinitions="*, Auto">

        <VerticalStackLayout Grid.Row="0" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center">

            <Label Text="{Binding }" 
                   FontSize="48" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>

            <Label Text="{Binding CurrentDate, StringFormat='{0:dd.MM.yyyy}'}" 
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"
                   TextColor="{StaticResource Gray600}"/>
        </VerticalStackLayout>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*,*,*,*"
              BackgroundColor="{StaticResource Gray200}"
              Padding="5"
              HeightRequest="70">

            <VerticalStackLayout Grid.Column="0" Spacing="3">
                <ImageButton Source="violators_icon.png" 
                            WidthRequest="28" 
                            HeightRequest="28"
                            Command="{Binding ViolatorsCommand}"
                            BackgroundColor="Transparent"/>
                <Label Text="Нарушители" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="3">
                <ImageButton Source="documents_icon.png" 
                            WidthRequest="28" 
                            HeightRequest="28"
                            Command="{Binding DocumentsCommand}"
                            BackgroundColor="Transparent"/>
                <Label Text="Документы" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" Spacing="3">
                <ImageButton Source="registration_icon.png" 
                            WidthRequest="28" 
                            HeightRequest="28"
                            Command="{Binding RegistrationCommand}"
                            BackgroundColor="Transparent"/>
                <Label Text="Оформление" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="3" Spacing="3">
                <ImageButton Source="dormitory_icon.png" 
                            WidthRequest="28" 
                            HeightRequest="28"
                            Command="{Binding DormitoryCommand}"
                            BackgroundColor="Transparent"/>
                <Label Text="Общежития" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="4" Spacing="3">
                <ImageButton Source="employees_icon.png" 
                            WidthRequest="28" 
                            HeightRequest="28"
                            Command="{Binding EmployeesTableCommand}"
                            BackgroundColor="Transparent"/>
                <Label Text="Сотрудники" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>