<Window x:Class="NetWatch.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetWatch.Desktop"
        xmlns:converters="clr-namespace:NetWatch.Desktop.Converters"
        mc:Ignorable="d"
        Title="NetWatch Desktop" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:DeviceTypeToIconConverter x:Key="DeviceTypeToIconConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <!-- Styles -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF007ACC" Padding="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🌐" FontSize="28" Margin="0,0,15,0"/>
                <TextBlock Text="NetWatch Desktop" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <Border Background="#1AFFFFFF" CornerRadius="4" Padding="8,4" Margin="20,0,0,0">
                    <TextBlock Text="{Binding MainViewModel.StatusMessage}" 
                               Foreground="White" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Margin="10">

            <!-- Dashboard Tab -->
            <TabItem Header="📊 Dashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Statistics Cards Row 1 -->
                        <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <!-- Total Devices -->
                            <Border Width="200" Height="110" Background="White" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" 
                                    CornerRadius="8" Margin="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Total Devices" FontSize="12" Foreground="#666666"/>
                                    <TextBlock Text="{Binding DashboardViewModel.TotalDevices}" 
                                               FontSize="32" FontWeight="Bold" Foreground="#007ACC"
                                               Margin="0,5,0,0"/>
                                    <ProgressBar Value="{Binding DashboardViewModel.TotalDevices}" 
                                                 Maximum="100" Height="6" Margin="0,10,0,0"
                                                 Background="#E0E0E0" Foreground="#007ACC"/>
                                </StackPanel>
                            </Border>

                            <!-- Online Devices -->
                            <Border Width="200" Height="110" Background="White" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" 
                                    CornerRadius="8" Margin="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Online Devices" FontSize="12" Foreground="#666666"/>
                                    <TextBlock Text="{Binding DashboardViewModel.OnlineDevices}" 
                                               FontSize="32" FontWeight="Bold" Foreground="#4CAF50"
                                               Margin="0,5,0,0"/>
                                    <ProgressBar Value="{Binding DashboardViewModel.OnlineDevices}" 
                                                 Maximum="{Binding DashboardViewModel.TotalDevices}" 
                                                 Height="6" Margin="0,10,0,0"
                                                 Background="#E0E0E0" Foreground="#4CAF50"/>
                                </StackPanel>
                            </Border>

                            <!-- Offline Devices -->
                            <Border Width="200" Height="110" Background="White" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" 
                                    CornerRadius="8" Margin="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Offline Devices" FontSize="12" Foreground="#666666"/>
                                    <TextBlock Text="{Binding DashboardViewModel.OfflineDevices}" 
                                               FontSize="32" FontWeight="Bold" Foreground="#F44336"
                                               Margin="0,5,0,0"/>
                                    <ProgressBar Value="{Binding DashboardViewModel.OfflineDevices}" 
                                                 Maximum="{Binding DashboardViewModel.TotalDevices}" 
                                                 Height="6" Margin="0,10,0,0"
                                                 Background="#E0E0E0" Foreground="#F44336"/>
                                </StackPanel>
                            </Border>

                            <!-- Alerts -->
                            <Border Width="200" Height="110" Background="White" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" 
                                    CornerRadius="8" Margin="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Unread Alerts" FontSize="12" Foreground="#666666"/>
                                    <TextBlock Text="{Binding DashboardViewModel.UnreadAlerts}" 
                                               FontSize="32" FontWeight="Bold" Foreground="#FF9800"
                                               Margin="0,5,0,0"/>
                                    <Button Content="View All" 
                                            Command="{Binding AlertViewModel.LoadAlertsCommand}"
                                            Width="80" Height="25" Margin="0,10,0,0"
                                            FontSize="12" Padding="5,2"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <!-- Device Types -->
                        <Border Grid.Row="1" Background="White" 
                                BorderBrush="#E0E0E0" BorderThickness="1" 
                                CornerRadius="8" Margin="10" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="📱 Device Types" FontSize="16" FontWeight="Bold"/>
                                    <Button Content="Refresh" 
                                            Command="{Binding DashboardViewModel.RefreshDashboardCommand}"
                                            Width="80" Height="25" Margin="20,0,0,0"
                                            FontSize="12" Padding="5,2"/>
                                </StackPanel>

                                <ListView ItemsSource="{Binding DashboardViewModel.DeviceTypeStats}" 
                                          Height="200" BorderThickness="0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Type" Width="150">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding DeviceType, Converter={StaticResource DeviceTypeToIconConverter}}" 
                                                                       Margin="0,0,10,0"/>
                                                            <TextBlock Text="{Binding DeviceType}" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Count" Width="100" DisplayMemberBinding="{Binding Count}"/>
                                            <GridViewColumn Header="Percentage" Width="100" DisplayMemberBinding="{Binding FormattedPercentage}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </Border>

                        <!-- Recent Alerts -->
                        <Border Grid.Row="2" Background="White" 
                                BorderBrush="#E0E0E0" BorderThickness="1" 
                                CornerRadius="8" Margin="10" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="🔔 Recent Alerts" FontSize="16" FontWeight="Bold"/>
                                    <Button Content="Mark All as Read" 
                                            Command="{Binding DashboardViewModel.AcknowledgeAllAlertsCommand}"
                                            Width="120" Height="25" Margin="20,0,0,0"
                                            FontSize="12" Padding="5,2"/>
                                </StackPanel>

                                <ListView ItemsSource="{Binding DashboardViewModel.RecentAlerts}" 
                                          Height="150" BorderThickness="0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Time" Width="80" 
                                                            DisplayMemberBinding="{Binding CreatedAt, StringFormat='HH:mm:ss'}"/>
                                            <GridViewColumn Header="Level" Width="80">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="4" Padding="4,2" 
                                                                Background="{Binding AlertLevel, Converter={StaticResource StatusToColorConverter}}">
                                                            <TextBlock Text="{Binding AlertLevel}" 
                                                                       HorizontalAlignment="Center" 
                                                                       Foreground="White" 
                                                                       FontWeight="SemiBold"
                                                                       FontSize="11"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Message" Width="300" DisplayMemberBinding="{Binding Message}"/>
                                            <GridViewColumn Header="Device" Width="120" 
                                                            DisplayMemberBinding="{Binding Device.IpAddress}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="🖥️ Devices">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="🔄 Refresh" 
                                    Command="{Binding MainViewModel.RefreshDeviceListCommand}"
                                    Width="100"/>
                            <Separator Width="20" Visibility="Hidden"/>

                            <Button Content="✅ Mark as Trusted" 
                                    Command="{Binding MainViewModel.MarkDeviceAsTrustedCommand}"
                                    Width="140" Margin="10,0,0,0"/>
                            <Button Content="🗑️ Delete" 
                                    Command="{Binding MainViewModel.DeleteSelectedDeviceCommand}"
                                    Width="100" Margin="10,0,0,0"
                                    Background="#F44336"/>
                            <Button Content="📡 Ping" 
                                    Command="{Binding MainViewModel.PingSelectedDeviceCommand}"
                                    Width="100" Margin="10,0,0,0"/>

                            <Separator Width="20" Visibility="Hidden"/>

                            <TextBox Width="250" 
                                     Text="{Binding MainViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="10,0,0,0" Padding="10,5"
                                     VerticalAlignment="Center"
                                     Style="{StaticResource {x:Type TextBox}}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Devices Grid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding MainViewModel.Devices}"
                              SelectedItem="{Binding MainViewModel.SelectedDevice}"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Host Name" Binding="{Binding HostName}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="MAC Address" Binding="{Binding MACAddress}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="150" IsReadOnly="True"/>

                            <DataGridTemplateColumn Header="Type" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding DeviceType, Converter={StaticResource DeviceTypeToIconConverter}}"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding DeviceType}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Status" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,3" 
                                                Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                            <TextBlock Text="{Binding Status}" 
                                                       HorizontalAlignment="Center" 
                                                       Foreground="White" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridCheckBoxColumn Header="Trusted" Binding="{Binding IsTrusted}" Width="70"/>

                            <DataGridTextColumn Header="First Seen" 
                                                Binding="{Binding FirstSeen, StringFormat='dd.MM.yyyy'}" 
                                                Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Last Seen" 
                                                Binding="{Binding LastSeen, StringFormat='dd.MM.yyyy HH:mm'}" 
                                                Width="120" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Scan Tab -->
            <TabItem Header="🔍 Scan">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Scan Configuration -->
                    <GroupBox Grid.Row="0" Header="Scan Configuration">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="IP Range:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"/>

                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding ScanViewModel.SuggestedRanges}"
                                      Text="{Binding ScanViewModel.IpRange, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      Margin="0,0,10,0"
                                      Padding="8"/>

                            <Button Grid.Row="0" Grid.Column="2" 
                                    Content="Validate" 
                                    Command="{Binding ScanViewModel.ValidateIpRangeCommand}" 
                                    Width="80"/>

                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <CheckBox Content="Scan Ports" 
                                          IsChecked="{Binding ScanViewModel.ScanPorts}" 
                                          Margin="0,0,20,0"
                                          VerticalAlignment="Center"/>
                                <CheckBox Content="Resolve Host Names" 
                                          IsChecked="{Binding ScanViewModel.ResolveHostNames}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Scan Progress -->
                    <GroupBox Grid.Row="1" Header="Scan Progress" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="{Binding ScanViewModel.StatusMessage}" 
                                       Margin="0,0,0,10"
                                       FontSize="14"/>

                            <ProgressBar Height="20" 
                                         Value="{Binding ScanViewModel.ScanProgress}" 
                                         Maximum="100"
                                         Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="▶ Start Scan" 
                                        Command="{Binding ScanViewModel.StartScanCommand}"
                                        IsEnabled="{Binding ScanViewModel.IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                        Width="120" Height="35" Margin="5"
                                        FontWeight="Bold"/>

                                <Button Content="⏹ Stop" 
                                        Command="{Binding ScanViewModel.StopScanCommand}"
                                        IsEnabled="{Binding ScanViewModel.IsScanning}"
                                        Width="100" Height="35" Margin="5"
                                        Background="#F44336"/>

                                <Button Content="⚡ Quick Scan" 
                                        Command="{Binding ScanViewModel.QuickScanCommand}"
                                        Width="120" Height="35" Margin="5"/>

                                <Button Content="🌐 Auto Detect" 
                                        Command="{Binding ScanViewModel.UseLocalNetworkCommand}"
                                        Width="120" Height="35" Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Scan History -->
                    <GroupBox Grid.Row="2" Header="Scan History" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListView Grid.Row="0" 
                                      ItemsSource="{Binding ScanViewModel.ScanHistory}" 
                                      Height="120"
                                      BorderThickness="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Time" DisplayMemberBinding="{Binding FormattedTime}" Width="80"/>
                                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding FormattedDate}" Width="100"/>
                                        <GridViewColumn Header="IP Range" DisplayMemberBinding="{Binding IpRange}" Width="150"/>
                                        <GridViewColumn Header="Devices Found" DisplayMemberBinding="{Binding DevicesFound}" Width="100"/>
                                        <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding FormattedDuration}" Width="80"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <Button Grid.Row="1" 
                                    Content="Clear History" 
                                    Command="{Binding ScanViewModel.ClearHistoryCommand}"
                                    HorizontalAlignment="Right" 
                                    Margin="0,10,0,0"
                                    Width="100"/>
                        </Grid>
                    </GroupBox>

                    <!-- Recent IP Ranges -->
                    <GroupBox Grid.Row="3" Header="Recent IP Ranges" Margin="0,10,0,0">
                        <ListView ItemsSource="{Binding ScanViewModel.SuggestedRanges}" 
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,5" Margin="0,2" Background="#F5F5F5" CornerRadius="4">
                                        <TextBlock Text="{Binding }" 
                                                   Padding="5" 
                                                   FontSize="14"
                                                   MouseLeftButtonDown="OnRangeItemClicked"
                                                   Cursor="Hand"/>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Alerts Tab -->
            <TabItem Header="⚠️ Alerts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Alerts Toolbar -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="🔄 Refresh" 
                                    Command="{Binding AlertViewModel.LoadAlertsCommand}"
                                    Width="100"/>
                            <Separator Width="20" Visibility="Hidden"/>

                            <Button Content="✓ Mark as Read" 
                                    Command="{Binding AlertViewModel.MarkAsReadCommand}"
                                    Width="120" Margin="10,0,0,0"/>
                            <Button Content="✓✓ Mark All as Read" 
                                    Command="{Binding AlertViewModel.MarkAllAsReadCommand}"
                                    Width="140" Margin="10,0,0,0"/>

                            <Separator Width="20" Visibility="Hidden"/>

                            <Button Content="🗑️ Delete" 
                                    Command="{Binding AlertViewModel.DeleteAlertCommand}"
                                    Width="100" Margin="10,0,0,0"
                                    Background="#F44336"/>
                            <Button Content="🧹 Clear All" 
                                    Command="{Binding AlertViewModel.ClearAllAlertsCommand}"
                                    Width="100" Margin="10,0,0,0"
                                    Background="#FF5722"/>

                            <Separator Width="20" Visibility="Hidden"/>

                            <CheckBox Content="Show Only Unread" 
                                      IsChecked="{Binding AlertViewModel.ShowOnlyUnread}" 
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0"/>

                            <TextBox Width="250" 
                                     Text="{Binding AlertViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="20,0,0,0" Padding="10,5"
                                     VerticalAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Alerts Grid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding AlertViewModel.Alerts}"
                              SelectedItem="{Binding AlertViewModel.SelectedAlert}"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" 
                                                Binding="{Binding CreatedAt, StringFormat='HH:mm:ss'}" 
                                                Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Date" 
                                                Binding="{Binding CreatedAt, StringFormat='dd.MM.yyyy'}" 
                                                Width="100" IsReadOnly="True"/>

                            <DataGridTemplateColumn Header="Level" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,3" 
                                                Background="{Binding AlertLevel, Converter={StaticResource StatusToColorConverter}}">
                                            <TextBlock Text="{Binding AlertLevel}" 
                                                       HorizontalAlignment="Center" 
                                                       Foreground="White" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Type" 
                                                Binding="{Binding AlertType}" 
                                                Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Message" 
                                                Binding="{Binding Message}" 
                                                Width="300" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Device IP" 
                                                Binding="{Binding Device.IpAddress}" 
                                                Width="120" IsReadOnly="True"/>

                            <DataGridCheckBoxColumn Header="Read" 
                                                    Binding="{Binding IsAcknowledged}" 
                                                    Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#007ACC">
            <StatusBarItem>
                <TextBlock Foreground="White" 
                           Text="{Binding MainViewModel.Devices.Count, StringFormat='Devices: {0}'}"
                           FontWeight="SemiBold"/>
            </StatusBarItem>
            <Separator Background="#1AFFFFFF" Width="1" Margin="10,0"/>
            <StatusBarItem>
                <TextBlock Foreground="White" 
                           Text="{Binding AlertViewModel.UnreadAlerts, StringFormat='Unread Alerts: {0}'}"
                           FontWeight="SemiBold"/>
            </StatusBarItem>
            <Separator Background="#1AFFFFFF" Width="1" Margin="10,0"/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Width="150" 
                                 Height="14" 
                                 IsIndeterminate="{Binding MainViewModel.IsScanning}"
                                 Visibility="{Binding MainViewModel.IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Margin="0,0,15,0"
                                 Background="#1AFFFFFF"
                                 Foreground="White"/>
                    <TextBlock Foreground="White" 
                               Text="{Binding MainViewModel.StatusMessage}"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>