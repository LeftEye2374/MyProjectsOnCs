<Window x:Class="NetWatch.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NetWatch Desktop" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="NetWatch Desktop" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="StatusText"
                           Foreground="LightGray" 
                           FontSize="14" 
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="5">
            <TabItem Header="Devices">
                <Grid>
                    <DataGrid x:Name="DevicesDataGrid"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              Margin="5"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionChanged="DevicesDataGrid_SelectionChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Scan">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <!-- Start Scan Button -->
                    <Button x:Name="StartScanButton"
                            Content="Start Network Scan"
                            Height="40"
                            Width="200"
                            Margin="0,0,0,20"
                            FontSize="14"
                            Click="StartScanButton_Click"/>

                    <!-- Progress Bar -->
                    <ProgressBar x:Name="ScanProgressBar"
                                 Height="20" 
                                 Width="300"
                                 Margin="0,10"
                                 IsIndeterminate="False"
                                 Value="0"
                                 Visibility="Collapsed"/>

                    <!-- Scanning Text -->
                    <TextBlock x:Name="ScanningText"
                               Text="Network scanning in progress..." 
                               HorizontalAlignment="Center"
                               Margin="0,10"
                               Visibility="Collapsed"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#FFE0E0E0">
            <StatusBarItem>
                <TextBlock x:Name="DevicesCountText" Text="Devices: 0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <!-- Refresh Button -->
                <Button x:Name="RefreshButton"
                        Content="Refresh" 
                        Margin="5,0"
                        Padding="10,2"
                        Click="RefreshButton_Click"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Control Panel -->
        <Border Grid.Row="1" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Background="#E6FFFFFF"
                CornerRadius="5"
                Margin="10"
                Padding="10"
                Width="250"
                BorderBrush="LightGray"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Device Actions" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <!-- Show Details Button -->
                <Button x:Name="ShowDetailsButton"
                        Content="Show Details" 
                        Margin="0,5" Height="30"
                        Click="ShowDetailsButton_Click"/>

                <!-- Mark as Trusted Button -->
                <Button x:Name="MarkTrustedButton"
                        Content="Mark as Trusted" 
                        Margin="0,5" Height="30"
                        Click="MarkTrustedButton_Click"/>

                <!-- Delete Device Button -->
                <Button x:Name="DeleteDeviceButton"
                        Content="Delete Device" 
                        Margin="0,5" Height="30"
                        Background="#FFFF4444"
                        Foreground="White"
                        Click="DeleteDeviceButton_Click"/>

                <!-- Ping Device Button -->
                <Button x:Name="PingDeviceButton"
                        Content="Ping Device" 
                        Margin="0,5" Height="30"
                        Click="PingDeviceButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>